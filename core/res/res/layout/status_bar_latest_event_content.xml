<LinearLayout android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/icon"
               android:background="@drawable/status_bar_latest_event_panel"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:scaleType="center" />
    <LinearLayout android:layout_gravity="center"
                  android:orientation="vertical"
                  android:paddingLeft="10.0dip"
                  android:paddingRight="10.0dip"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
        <TextView android:textAppearance="@style/TextAppearance.NotificationPanel.EventContent.Title"
                  android:ellipsize="marquee"
                  android:id="@id/title"
                  android:fadingEdge="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:singleLine="true" />
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content">
            <TextView android:textAppearance="@style/TextAppearance.NotificationPanel.EventContent"
                      android:ellipsize="marquee"
                      android:id="@id/text"
                      android:fadingEdge="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:singleLine="true"
                      android:layout_weight="1" />
            <android.widget.DateTimeView android:textAppearance="@style/TextAppearance.NotificationPanel.EventContent"
                                         android:id="@id/time"
                                         android:paddingLeft="8.0dip"
                                         android:layout_gravity="right"
                                         android:layout_width="wrap_content"
                                         android:layout_height="wrap_content"
                                         android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
